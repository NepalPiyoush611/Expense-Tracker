<style>
    /* Full-Screen Section */
    .hero-section {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #2196f3, #90caf9); /* Blue Gradient */
        color: #ffffff;
        padding: 20px;
    }

    /* Title Styles */
    .hero-title {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 1rem;
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    /* Description Styles */
    .hero-description {
        font-size: 1.2rem;
        font-weight: 400;
        margin-bottom: 2rem;
        color: #f5f5f5;
        max-width: 600px;
        line-height: 1.6;
    }

    /* Buttons Group */
    .button-group {
        display: flex;
        gap: 1.5rem;
    }

    /* Button Styles */
    .btn {
        display: inline-block;
        font-size: 1rem;
        font-weight: 600;
        padding: 15px 30px;
        border-radius: 30px;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.4s ease;
        text-decoration: none;
    }

    .btn-main {
        background: #ffffff;
        color: #2196f3;
        border: none;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
    }

    .btn-secondary {
        background: transparent;
        color: #ffffff;
        border: 2px solid #ffffff;
    }

    /* Hover Effects */
    .btn:hover {
        transform: translateY(-3px);
        box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.3);
    }

    .btn-main:hover {
        background: #f0f0f0;
        color: #1976d2;
    }

    .btn-secondary:hover {
        background: #ffffff;
        color: #2196f3;
    }

    /* Swipe Animation */
    .btn::after {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(255, 255, 255, 0.1);
        transform: scale(0);
        border-radius: 30px;
        transition: transform 0.4s ease;
        z-index: -1;
    }

    .btn:hover::after {
        transform: scale(1.2);
    }

    /* Responsive Design */
    @code{}

    {
        font-size: 2.5rem;
    }

    .hero-description {
        font-size: 1rem;
        max-width: 90%;
    }

    .button-group {
        flex-direction: column;
        gap: 1rem;
    }

    }</style>
